    <security-constraint>
        <web-resourde-collection>
            <web-resourde-name>Admin</web-resourde-name>
            <url-pattern>/admin/*</url-pattern>
        </web-resourde-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
        <user-data-constraint>
           <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
       <web-resourde-collection>
          <web-resourde-name>Manager</web-resourde-name>
          <url-pattern>/manager/*</url-pattern>
          <http-method>GET</http-method>
          <http-method>POST</http-method>
       </web-resourde-collection>
       <auth-constraint>
           <role-name>admin</role-name>
           <role-name>manager</role-name>
        </auth-constraint>
        <user-data-constraint>
           <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <login-config>
       <auth-method>BASIC</auth-method>
    </login-config>
    <security-role>
       <role-name>admin</role-name>
    </security-role>
    <security-role>
       <role-name>manager</role-name>
